<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            x:Class="BedChangeReminder.Views.BedPopup">

    <VerticalStackLayout Padding="20" BackgroundColor="White" WidthRequest="300">
        <Label Text="Add or Update Bed" FontSize="20" HorizontalOptions="Center" />
        <Entry x:Name="BedNameEntry" Placeholder="Enter Bed Name" />
        <DatePicker x:Name="ChangeDatePicker" Format="dd/MM/yyyy"/>
        <Picker x:Name="FlipRotatePicker" Title="Select Flipped/Rotated">
            <Picker.Items>
                <x:String>Flipped</x:String>
                <x:String>Rotated</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Confirm" Clicked="OnConfirmClicked" />
    </VerticalStackLayout>
</toolkit:Popup>